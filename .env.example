# Chittra Configuration
# Copy this file to .env and customize as needed

# Server
PORT=3000
HOST=0.0.0.0

# Image constraints
CHITTRA_MIN_SIZE=10
CHITTRA_MAX_SIZE=4000
CHITTRA_MAX_SCALE=4

# Cache settings
CHITTRA_CACHE_TTL=3600000
CHITTRA_CACHE_MAX_ITEMS=1000

# Performance
CHITTRA_CONCURRENCY=4

# Temp file cleanup (ms)
CHITTRA_CLEANUP_INTERVAL=3600000
CHITTRA_CLEANUP_MAX_AGE=86400000
