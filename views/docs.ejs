<%- include('partials/head', { title: 'Documentation - Chittra' }) %>
    <div class="max-w-4xl mx-auto px-4 py-8">
        
        <%- include('partials/nav', { active: 'docs' }) %>

        <h1 class="text-3xl font-bold mb-2">Documentation</h1>
        <p class="text-gray-500 mb-8">Complete guide to using Chittra placeholder image generator.</p>

        <!-- Table of Contents -->
        <div class="bg-white rounded-lg border border-gray-200 p-4 mb-8">
            <h2 class="font-semibold mb-3">Contents</h2>
            <ul class="space-y-1 text-sm">
                <li><a href="#getting-started" class="text-indigo-600 hover:underline">Getting Started</a></li>
                <li><a href="#url-structure" class="text-indigo-600 hover:underline">URL Structure</a></li>
                <li><a href="#parameters" class="text-indigo-600 hover:underline">Parameters</a></li>
                <li><a href="#formats" class="text-indigo-600 hover:underline">Output Formats</a></li>
                <li><a href="#colors" class="text-indigo-600 hover:underline">Colors</a></li>
                <li><a href="#fonts" class="text-indigo-600 hover:underline">Fonts</a></li>
                <li><a href="#examples" class="text-indigo-600 hover:underline">Examples</a></li>
                <li><a href="#html-usage" class="text-indigo-600 hover:underline">HTML Usage</a></li>
                <li><a href="#api" class="text-indigo-600 hover:underline">API Reference</a></li>
                <li><a href="#self-hosting" class="text-indigo-600 hover:underline">Self-Hosting</a></li>
            </ul>
        </div>

        <!-- Getting Started -->
        <section id="getting-started" class="mb-10">
            <h2 class="text-xl font-semibold mb-4">Getting Started</h2>
            <p class="text-gray-600 mb-4">Generate a placeholder image by constructing a URL with your desired dimensions:</p>
            <div class="bg-gray-900 rounded-lg p-4 mb-4">
                <code class="text-green-400"><%= baseUrl %>/600x400</code>
            </div>
            <p class="text-gray-600">This returns an SVG image with dimensions 600x400 pixels.</p>
        </section>

        <!-- URL Structure -->
        <section id="url-structure" class="mb-10">
            <h2 class="text-xl font-semibold mb-4">URL Structure</h2>
            <div class="bg-gray-900 rounded-lg p-4 mb-4 overflow-x-auto">
                <code class="text-gray-300"><%= baseUrl %>/<span class="text-yellow-400">{size}</span>/<span class="text-blue-400">{background}</span>/<span class="text-pink-400">{textColor}</span>/<span class="text-green-400">{format}</span>?<span class="text-purple-400">text</span>=...&<span class="text-purple-400">font</span>=...</code>
            </div>
            <p class="text-gray-600 mb-4">All parameters except <code class="bg-gray-100 px-1 rounded">size</code> are optional.</p>
            
            <div class="bg-white rounded-lg border border-gray-200 overflow-hidden">
                <table class="w-full text-sm">
                    <thead class="bg-gray-50">
                        <tr>
                            <th class="text-left py-3 px-4 font-medium">Part</th>
                            <th class="text-left py-3 px-4 font-medium">Required</th>
                            <th class="text-left py-3 px-4 font-medium">Description</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-gray-100">
                        <tr>
                            <td class="py-3 px-4"><code class="text-yellow-600">size</code></td>
                            <td class="py-3 px-4"><span class="text-green-600">Yes</span></td>
                            <td class="py-3 px-4 text-gray-600">Image dimensions</td>
                        </tr>
                        <tr>
                            <td class="py-3 px-4"><code class="text-blue-600">background</code></td>
                            <td class="py-3 px-4"><span class="text-gray-400">No</span></td>
                            <td class="py-3 px-4 text-gray-600">Background color (default: #eeeeee)</td>
                        </tr>
                        <tr>
                            <td class="py-3 px-4"><code class="text-pink-600">textColor</code></td>
                            <td class="py-3 px-4"><span class="text-gray-400">No</span></td>
                            <td class="py-3 px-4 text-gray-600">Text color (default: #555555)</td>
                        </tr>
                        <tr>
                            <td class="py-3 px-4"><code class="text-green-600">format</code></td>
                            <td class="py-3 px-4"><span class="text-gray-400">No</span></td>
                            <td class="py-3 px-4 text-gray-600">Output format (default: svg)</td>
                        </tr>
                        <tr>
                            <td class="py-3 px-4"><code class="text-purple-600">?text</code></td>
                            <td class="py-3 px-4"><span class="text-gray-400">No</span></td>
                            <td class="py-3 px-4 text-gray-600">Custom display text</td>
                        </tr>
                        <tr>
                            <td class="py-3 px-4"><code class="text-purple-600">?font</code></td>
                            <td class="py-3 px-4"><span class="text-gray-400">No</span></td>
                            <td class="py-3 px-4 text-gray-600">Font family (default: lato)</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </section>

        <!-- Parameters -->
        <section id="parameters" class="mb-10">
            <h2 class="text-xl font-semibold mb-4">Parameters</h2>
            
            <h3 class="font-semibold mt-6 mb-3">Size</h3>
            <p class="text-gray-600 mb-3">Specify dimensions in pixels. Supports multiple formats:</p>
            <div class="bg-white rounded-lg border border-gray-200 overflow-hidden mb-4">
                <table class="w-full text-sm">
                    <thead class="bg-gray-50">
                        <tr>
                            <th class="text-left py-3 px-4 font-medium">Format</th>
                            <th class="text-left py-3 px-4 font-medium">Example</th>
                            <th class="text-left py-3 px-4 font-medium">Result</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-gray-100">
                        <tr>
                            <td class="py-3 px-4 text-gray-600">Width x Height</td>
                            <td class="py-3 px-4"><code>600x400</code></td>
                            <td class="py-3 px-4 text-gray-600">600px wide, 400px tall</td>
                        </tr>
                        <tr>
                            <td class="py-3 px-4 text-gray-600">Square</td>
                            <td class="py-3 px-4"><code>400</code></td>
                            <td class="py-3 px-4 text-gray-600">400px x 400px</td>
                        </tr>
                        <tr>
                            <td class="py-3 px-4 text-gray-600">Retina (@2x)</td>
                            <td class="py-3 px-4"><code>600x400@2x</code></td>
                            <td class="py-3 px-4 text-gray-600">1200px x 800px</td>
                        </tr>
                        <tr>
                            <td class="py-3 px-4 text-gray-600">Retina (@3x)</td>
                            <td class="py-3 px-4"><code>400@3x</code></td>
                            <td class="py-3 px-4 text-gray-600">1200px x 1200px</td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <p class="text-sm text-gray-500">Min: <%= config.MIN_SIZE %>px | Max: <%= config.MAX_SIZE %>px | Max scale: @<%= config.MAX_SCALE %>x</p>

            <h3 class="font-semibold mt-6 mb-3">Text</h3>
            <p class="text-gray-600 mb-3">Custom text displayed on the image. Use query parameter:</p>
            <div class="bg-gray-900 rounded-lg p-4 mb-3">
                <code class="text-green-400"><%= baseUrl %>/600x400?text=Hello+World</code>
            </div>
            <ul class="text-sm text-gray-600 space-y-1">
                <li>Use <code class="bg-gray-100 px-1 rounded">+</code> or <code class="bg-gray-100 px-1 rounded">%20</code> for spaces</li>
                <li>Use <code class="bg-gray-100 px-1 rounded">\n</code> for line breaks</li>
                <li>Default text shows dimensions (e.g., "600 x 400")</li>
            </ul>
        </section>

        <!-- Formats -->
        <section id="formats" class="mb-10">
            <h2 class="text-xl font-semibold mb-4">Output Formats</h2>
            <div class="bg-white rounded-lg border border-gray-200 overflow-hidden">
                <table class="w-full text-sm">
                    <thead class="bg-gray-50">
                        <tr>
                            <th class="text-left py-3 px-4 font-medium">Format</th>
                            <th class="text-left py-3 px-4 font-medium">Usage</th>
                            <th class="text-left py-3 px-4 font-medium">Transparency</th>
                            <th class="text-left py-3 px-4 font-medium">Best For</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-gray-100">
                        <tr>
                            <td class="py-3 px-4 font-medium">SVG</td>
                            <td class="py-3 px-4"><code>/600x400</code> <span class="text-gray-400">(default)</span></td>
                            <td class="py-3 px-4"><span class="text-green-600">Yes</span></td>
                            <td class="py-3 px-4 text-gray-600">Scalable, smallest size</td>
                        </tr>
                        <tr>
                            <td class="py-3 px-4 font-medium">PNG</td>
                            <td class="py-3 px-4"><code>/600x400/png</code></td>
                            <td class="py-3 px-4"><span class="text-green-600">Yes</span></td>
                            <td class="py-3 px-4 text-gray-600">Lossless, wide support</td>
                        </tr>
                        <tr>
                            <td class="py-3 px-4 font-medium">WebP</td>
                            <td class="py-3 px-4"><code>/600x400/webp</code></td>
                            <td class="py-3 px-4"><span class="text-green-600">Yes</span></td>
                            <td class="py-3 px-4 text-gray-600">Modern browsers, good compression</td>
                        </tr>
                        <tr>
                            <td class="py-3 px-4 font-medium">JPEG</td>
                            <td class="py-3 px-4"><code>/600x400/jpeg</code></td>
                            <td class="py-3 px-4"><span class="text-red-600">No</span></td>
                            <td class="py-3 px-4 text-gray-600">Photos, legacy support</td>
                        </tr>
                        <tr>
                            <td class="py-3 px-4 font-medium">AVIF</td>
                            <td class="py-3 px-4"><code>/600x400/avif</code></td>
                            <td class="py-3 px-4"><span class="text-green-600">Yes</span></td>
                            <td class="py-3 px-4 text-gray-600">Best compression, newer browsers</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </section>

        <!-- Colors -->
        <section id="colors" class="mb-10">
            <h2 class="text-xl font-semibold mb-4">Colors</h2>
            <p class="text-gray-600 mb-4">Colors can be specified in multiple formats:</p>
            
            <div class="bg-white rounded-lg border border-gray-200 overflow-hidden mb-4">
                <table class="w-full text-sm">
                    <thead class="bg-gray-50">
                        <tr>
                            <th class="text-left py-3 px-4 font-medium">Type</th>
                            <th class="text-left py-3 px-4 font-medium">Example</th>
                            <th class="text-left py-3 px-4 font-medium">URL</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-gray-100">
                        <tr>
                            <td class="py-3 px-4 text-gray-600">Hex (6 digits)</td>
                            <td class="py-3 px-4"><span class="inline-block w-4 h-4 rounded" style="background:#3b82f6"></span> <code>3b82f6</code></td>
                            <td class="py-3 px-4"><code>/600x400/3b82f6/ffffff</code></td>
                        </tr>
                        <tr>
                            <td class="py-3 px-4 text-gray-600">Hex (3 digits)</td>
                            <td class="py-3 px-4"><span class="inline-block w-4 h-4 rounded" style="background:#f00"></span> <code>f00</code></td>
                            <td class="py-3 px-4"><code>/600x400/f00/fff</code></td>
                        </tr>
                        <tr>
                            <td class="py-3 px-4 text-gray-600">Named colors</td>
                            <td class="py-3 px-4"><span class="inline-block w-4 h-4 rounded bg-blue-500"></span> <code>blue</code></td>
                            <td class="py-3 px-4"><code>/600x400/blue/white</code></td>
                        </tr>
                        <tr>
                            <td class="py-3 px-4 text-gray-600">Transparent</td>
                            <td class="py-3 px-4"><span class="inline-block w-4 h-4 rounded border border-gray-300" style="background:repeating-conic-gradient(#ccc 0% 25%, #fff 0% 50%) 50% / 8px 8px"></span> <code>transparent</code></td>
                            <td class="py-3 px-4"><code>/600x400/transparent/333/png</code></td>
                        </tr>
                    </tbody>
                </table>
            </div>
            
            <p class="text-sm text-gray-500">Supported named colors: black, white, red, green, blue, yellow, orange, purple, pink, cyan, gray, and more.</p>
        </section>

        <!-- Fonts -->
        <section id="fonts" class="mb-10">
            <h2 class="text-xl font-semibold mb-4">Fonts</h2>
            <p class="text-gray-600 mb-4">Use the <code class="bg-gray-100 px-1 rounded">font</code> query parameter to change the font:</p>
            <div class="bg-gray-900 rounded-lg p-4 mb-4">
                <code class="text-green-400"><%= baseUrl %>/600x400?font=roboto</code>
            </div>
            
            <h3 class="font-semibold mt-6 mb-3">Available Fonts</h3>
            <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 gap-2">
                <% fonts.forEach(function(font) { %>
                <div class="bg-white border border-gray-200 rounded-lg p-3 text-center">
                    <code class="text-sm text-indigo-600"><%= font %></code>
                </div>
                <% }); %>
            </div>
        </section>

        <!-- Examples -->
        <section id="examples" class="mb-10">
            <h2 class="text-xl font-semibold mb-4">Examples</h2>
            
            <div class="space-y-4">
                <div class="bg-white rounded-lg border border-gray-200 p-4">
                    <div class="flex items-start gap-4">
                        <img src="<%= baseUrl %>/150x100" alt="Basic" class="rounded border border-gray-100">
                        <div class="flex-1 min-w-0">
                            <p class="font-medium mb-1">Basic placeholder</p>
                            <div class="flex items-center gap-2">
                                <code class="text-sm bg-gray-50 px-2 py-1 rounded flex-1 truncate"><%= baseUrl %>/600x400</code>
                                <button onclick="copy('<%= baseUrl %>/600x400')" class="text-xs text-indigo-600 hover:text-indigo-700 font-medium shrink-0">Copy</button>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="bg-white rounded-lg border border-gray-200 p-4">
                    <div class="flex items-start gap-4">
                        <img src="<%= baseUrl %>/100" alt="Square" class="rounded border border-gray-100">
                        <div class="flex-1 min-w-0">
                            <p class="font-medium mb-1">Square image</p>
                            <div class="flex items-center gap-2">
                                <code class="text-sm bg-gray-50 px-2 py-1 rounded flex-1 truncate"><%= baseUrl %>/400</code>
                                <button onclick="copy('<%= baseUrl %>/400')" class="text-xs text-indigo-600 hover:text-indigo-700 font-medium shrink-0">Copy</button>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="bg-white rounded-lg border border-gray-200 p-4">
                    <div class="flex items-start gap-4">
                        <img src="<%= baseUrl %>/150x100/3b82f6/ffffff" alt="Colors" class="rounded border border-gray-100">
                        <div class="flex-1 min-w-0">
                            <p class="font-medium mb-1">Custom colors</p>
                            <div class="flex items-center gap-2">
                                <code class="text-sm bg-gray-50 px-2 py-1 rounded flex-1 truncate"><%= baseUrl %>/600x400/3b82f6/ffffff</code>
                                <button onclick="copy('<%= baseUrl %>/600x400/3b82f6/ffffff')" class="text-xs text-indigo-600 hover:text-indigo-700 font-medium shrink-0">Copy</button>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="bg-white rounded-lg border border-gray-200 p-4">
                    <div class="flex items-start gap-4">
                        <img src="<%= baseUrl %>/150x100?text=Hello" alt="Text" class="rounded border border-gray-100">
                        <div class="flex-1 min-w-0">
                            <p class="font-medium mb-1">Custom text</p>
                            <div class="flex items-center gap-2">
                                <code class="text-sm bg-gray-50 px-2 py-1 rounded flex-1 truncate"><%= baseUrl %>/600x400?text=Hello+World</code>
                                <button onclick="copy('<%= baseUrl %>/600x400?text=Hello+World')" class="text-xs text-indigo-600 hover:text-indigo-700 font-medium shrink-0">Copy</button>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="bg-white rounded-lg border border-gray-200 p-4">
                    <div class="flex items-start gap-4">
                        <img src="<%= baseUrl %>/150x100/1f2937/f9fafb?font=poppins" alt="Font" class="rounded border border-gray-100">
                        <div class="flex-1 min-w-0">
                            <p class="font-medium mb-1">Custom font</p>
                            <div class="flex items-center gap-2">
                                <code class="text-sm bg-gray-50 px-2 py-1 rounded flex-1 truncate"><%= baseUrl %>/600x400?font=poppins</code>
                                <button onclick="copy('<%= baseUrl %>/600x400?font=poppins')" class="text-xs text-indigo-600 hover:text-indigo-700 font-medium shrink-0">Copy</button>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="bg-white rounded-lg border border-gray-200 p-4">
                    <div class="flex items-start gap-4">
                        <img src="<%= baseUrl %>/150x100/png" alt="PNG" class="rounded border border-gray-100">
                        <div class="flex-1 min-w-0">
                            <p class="font-medium mb-1">PNG format</p>
                            <div class="flex items-center gap-2">
                                <code class="text-sm bg-gray-50 px-2 py-1 rounded flex-1 truncate"><%= baseUrl %>/600x400/png</code>
                                <button onclick="copy('<%= baseUrl %>/600x400/png')" class="text-xs text-indigo-600 hover:text-indigo-700 font-medium shrink-0">Copy</button>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="bg-white rounded-lg border border-gray-200 p-4">
                    <div class="flex items-start gap-4">
                        <div class="rounded border border-gray-100" style="background:repeating-conic-gradient(#ccc 0% 25%, #fff 0% 50%) 50% / 10px 10px">
                            <img src="<%= baseUrl %>/150x100/transparent/333/png" alt="Transparent" class="rounded">
                        </div>
