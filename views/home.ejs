<%- include('partials/head', { title: 'Chittra - Placeholder Image Generator' }) %>
    <div class="max-w-4xl mx-auto px-4 py-12">
        
        <!-- Header -->
        <header class="text-center mb-12">
            <h1 class="text-4xl font-bold text-gray-900 mb-2">Chittra</h1>
            <p class="text-gray-500 mb-4">Fast placeholder image generator</p>
            <a href="/docs" class="text-sm text-indigo-600 hover:underline">View Documentation</a>
        </header>

        <!-- Quick Start -->
        <section class="bg-white rounded-xl border border-gray-200 p-6 mb-8">
            <h2 class="text-lg font-semibold mb-4">Quick Start</h2>
            <div class="flex items-center gap-3 bg-gray-50 rounded-lg p-3 font-mono text-sm">
                <code class="flex-1 text-gray-700"><%= baseUrl %>/<span class="text-indigo-600 font-semibold">{width}x{height}</span></code>
                <button onclick="copy('<%= baseUrl %>/600x400')" class="px-3 py-1.5 bg-indigo-600 text-white text-xs font-medium rounded-md hover:bg-indigo-700 transition">Copy</button>
            </div>
        </section>

        <!-- Examples -->
        <section class="mb-8">
            <h2 class="text-lg font-semibold mb-4">Examples</h2>
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
                
                <%- include('partials/example-card', { 
                    baseUrl, 
                    title: 'Basic', 
                    imgSrc: baseUrl + '/200x120', 
                    displayPath: '/600x400', 
                    copyUrl: baseUrl + '/600x400' 
                }) %>

                <%- include('partials/example-card', { 
                    baseUrl, 
                    title: 'Square', 
                    imgSrc: baseUrl + '/120', 
                    displayPath: '/400', 
                    copyUrl: baseUrl + '/400' 
                }) %>

                <%- include('partials/example-card', { 
                    baseUrl, 
                    title: 'Custom Colors', 
                    imgSrc: baseUrl + '/200x120/3b82f6/ffffff', 
                    displayPath: '/600x400/3b82f6/fff', 
                    copyUrl: baseUrl + '/600x400/3b82f6/ffffff' 
                }) %>

                <%- include('partials/example-card', { 
                    baseUrl, 
                    title: 'Custom Text', 
                    imgSrc: baseUrl + '/200x120?text=Hello', 
                    displayPath: '/600x400?text=Hello', 
                    copyUrl: baseUrl + '/600x400?text=Hello' 
                }) %>

                <%- include('partials/example-card', { 
                    baseUrl, 
                    title: 'PNG Format', 
                    imgSrc: baseUrl + '/200x120/png', 
                    displayPath: '/600x400/png', 
                    copyUrl: baseUrl + '/600x400/png' 
                }) %>

                <%- include('partials/example-card', { 
                    baseUrl, 
                    title: 'Custom Font', 
                    imgSrc: baseUrl + '/200x120/1f2937/f3f4f6?font=poppins', 
                    displayPath: '/600x400?font=poppins', 
                    copyUrl: baseUrl + '/600x400?font=poppins' 
                }) %>

            </div>
        </section>

        <%- include('partials/footer') %>
    </div>
<%- include('partials/scripts') %>
